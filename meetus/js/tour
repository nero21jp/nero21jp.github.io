$(function(){
    var biggestHeight = "0";
    $(".slide-imgs *").each(function(){
        if ($(this).height() > biggestHeight ) {
            biggestHeight = $(this).height()
        }
    });
    $(".slide-imgs").height(biggestHeight);
})

$(window).resize(function(){
    var biggestHeight = "0";
    $(".slide-imgs *").each(function(){
        if ($(this).height() > biggestHeight ) {
            biggestHeight = $(this).height()
        }
    });
    $(".slide-imgs").height(biggestHeight);
})